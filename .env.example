# Sturgis Project - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Backend Configuration
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Backend Port
BACKEND_PORT=8000

# ============================================
# Frontend Configuration
# ============================================

# Frontend Port
FRONTEND_PORT=80

# API Base URL (for frontend to connect to backend)
VITE_API_URL=http://localhost:8000

# ============================================
# AI Features (Azure OpenAI - Recommended)
# ============================================

# Azure OpenAI Configuration (Primary - cheapest option)
# Create resource at: https://portal.azure.com/#create/Microsoft.CognitiveServicesOpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Ollama (Fallback for local development)
# Only used if Azure OpenAI is not configured
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Security (Production)
# ============================================

# JWT Secret Key for authentication (IMPORTANT: Change in production!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Secret key for session management
SECRET_KEY=change-this-to-a-random-secret-key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:80

# ============================================
# Database (Future Enhancement)
# ============================================

# PostgreSQL (if you add database support)
# DATABASE_URL=postgresql://user:password@localhost:5432/msproject

# ============================================
# Logging
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# Docker Configuration
# ============================================

# Compose Project Name
COMPOSE_PROJECT_NAME=msproject

# Docker Registry (for pushing images)
# DOCKER_REGISTRY=your-registry.com
# DOCKER_USERNAME=your-username

